# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	interval = 1
}

order += "memstats"
order += "disk /"
order += "wireless wlp3s0"
order += "ethernet enp4s0f0"
order += "ethernet tun0"
order += "volume master"
order += "tztime local"

wireless wlp3s0 {
        format_up = "W: %ip (%quality - %essid)"
        format_down = ""
}

ethernet enp4s0f0 {
        format_up = "E: %ip (%speed)"
        format_down = ""
}

ethernet tun0 {
        format_up = "VPN: %ip (%speed)"
        format_down = ""
}

tztime local {
	format = "%a %Y-%m-%d %H:%M:%S"
}

disk "/" {
	format = "%avail"
}

volume master {
	format = "%volume"
	format_muted = "%volume (MUTE)"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
